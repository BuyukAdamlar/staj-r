@code {
    [Parameter]
    public UserWToken User { get; set; }
    public string session { get; set; } = "";
    public dashPages selectedPage = dashPages.Main;


    public Microsoft.AspNetCore.Components.EventCallback changePage(dashPages _select)
    {
        selectedPage = _select;
        return new EventCallback();
    }
    protected override void OnAfterRender(bool firstRender)
    {
        changeState();
        base.OnAfterRender(firstRender);
    }

    public enum dashPages
    {
        Main, Users, AddAcademic, AddCouncilor, Add_DptHead, Add_Role, Add_Std, AddOther, Other, StajI_Std, StajI, StajII_Std, StajII, IME_Std, IME
    }
    public async Task changeState()
    {
        do
        {
            var y = User.tokenExpiresOn - DateTime.Now;
            session = y.Hours+":"+y.Minutes+":"+y.Seconds;
            await InvokeAsync(StateHasChanged);
            await Task.Delay(1000);
        } while(true);
    }
    string title = "BasicModal";
    bool _visible = false;

    private void HandleOk(MouseEventArgs e)
    {
        Console.WriteLine(e);
        _visible = false;
    }

    private void HandleCancel(MouseEventArgs e)
    {
        Console.WriteLine(e);
        _visible = false;
    }


    void OnChange(string[] checkedValues)
    {
        Console.WriteLine($"checked = {JsonSerializer.Serialize(checkedValues)}");
    }

}
